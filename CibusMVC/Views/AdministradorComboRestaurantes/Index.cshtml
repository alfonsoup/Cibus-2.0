@model IEnumerable<CibusMVC.Models.ComboRestaurante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div style="margin:3em;margin-top:4em">
    <div class="col-md-9">
        <h2>Listado de Combos</h2>
        </div>

        <div class="col-md-3" style="margin-top:4em; text-align:right">
            <p>
                @Html.ActionLink("Crear un nuevo combo.", "Create")
            </p>
        </div>
    <hr class="col-md-12" style="border-color: Highlight ;border-width:0.5em; " />
        

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Imagen)
                    </th>*@
                @*<th>
                        @Html.DisplayNameFor(model => model.Restaurante.Nombre)
                    </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Imagen)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Restaurante.Nombre)
                        </td>*@
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.IdComboRestaurante }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.IdComboRestaurante }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdComboRestaurante })
                    </td>
                </tr>
            }

        </table>
        <hr style="border-color: Highlight;border-width:0.5em; " />

    </div>
