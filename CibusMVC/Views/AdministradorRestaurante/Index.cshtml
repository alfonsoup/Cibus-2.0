@model IEnumerable<CibusMVC.Models.Restaurante>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}


<div style="margin-left:3em; margin-right:3em">
    <div class="col-md-3">
        <h2>Restaurantes</h2>
    </div>
    <div class="col-md-9" style="margin-top:4em; text-align:right">
        <p>
            @Html.ActionLink("Crear un nuevo Restaurante", "CreateRestaurante")
        </p>
    </div>

    <hr class="col-md-12" style="border-color: Highlight ;border-width:0.5em; " />

    <table class="table" style="margin-top:4em; margin-bottom:3em">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td class="btn btn-group"> 
                    @Html.ActionLink("Editar", "EditRestaurante", new { id = item.IdRestaurante }) |
                    @Html.ActionLink("Detalles", "DetailsRestaurante", new { id = item.IdRestaurante }) |
                    @Html.ActionLink("Eliminar", "DeleteRestaurante", new { id = item.IdRestaurante })
                </td>
            </tr>
        }
        

    </table>
    

</div>